{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@/*": [
        "src/renderer/src/*"
      ]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/renderer/src/types"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx"
  ]
}
