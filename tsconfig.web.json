{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "typeRoots": ["./node_modules/@types", "./src/renderer/src/types"],
    "esModuleInterop": true
  },
  "include": [
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx"
  ]
}
