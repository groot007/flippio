{
  "productName": "Flippio",
  "version": "0.3.5",
  "identifier": "com.flippio.app",
  "build": {
    "beforeDevCommand": "npm run dev:renderer",
    "beforeBuildCommand": "npm run build:renderer",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src/renderer/dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: https:; style-src 'self' 'unsafe-inline' data: blob: https:; font-src 'self' data: blob: https:; img-src 'self' data: blob: https:; connect-src 'self' data: blob: https: wss: ws: tauri: ipc:; worker-src 'self' data: blob: https:; child-src 'self' data: blob: https:; frame-src 'self' data: blob: https:; object-src 'none'; base-uri 'self';",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:allow-unlisten",
            "core:window:default",
            "shell:allow-open",
            "fs:default",
            "dialog:default",
            "updater:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Flippio - database explorer for iOS and Android",
        "width": 900,
        "height": 670,
        "minWidth": 500,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#1a202c"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "macos-deps/idevice_id",
      "macos-deps/ideviceinfo",
      "macos-deps/afcclient",
      "macos-deps/ideviceinstaller"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Mykola Stanislavchuk (4SVA48D93U)",
      "frameworks": [
        "macos-deps/libcrypto.3.dylib",
        "macos-deps/libssl.3.dylib",
        "macos-deps/libusbmuxd-2.0.7.dylib",
        "macos-deps/libimobiledevice-glue-1.0.0.dylib",
        "macos-deps/libplist-2.0.4.dylib",
        "macos-deps/libzip.5.5.dylib",
        "macos-deps/liblzma.5.dylib",
        "macos-deps/libimobiledevice-1.0.6.dylib",
        "macos-deps/libzstd.1.5.7.dylib"
      ]
    }
  },

  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.github.com/repos/groot007/flippio/releases/latest"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE4OEFCRjdFNjU1NjRGNUYKUldSZlQxWmxmcitLR0FldFhIcWRNVEUxVjN5QlJYenZYTytwS1BLYWhFSjJhRUdsVW1LZ2srelgK"
    },
    "log": null
  }
}
